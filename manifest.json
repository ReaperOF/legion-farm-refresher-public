{
  "name": "LFC-Refresher",
  "short_name": "LFC-Re",
  "author": "Буль",
  "version": "7.1.5",
  "manifest_version": 2,
  "description": "Булькает...",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "refresher.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "ui.js"
      ],
      "matches": [
        "https://legionfarm.com/*",
        "https://lfcarry.com/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}